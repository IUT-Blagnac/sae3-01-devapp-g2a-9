<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.GraphController">
   <center>
      <VBox prefHeight="551.0" prefWidth="443.0">
         <children>
    <Label alignment="CENTER" style="&#10;" text="Evolution" textAlignment="CENTER" wrapText="false">
               <font>
                  <Font size="18.0" fx:id="x5" />
               </font>
            </Label>
            <LineChart fx:id="chartTemp" title="Température">
               <xAxis>
                  <CategoryAxis side="BOTTOM" fx:id="xAxisTemp" />
               </xAxis>
               <yAxis>
                  <NumberAxis fx:id="yAxisTemp" side="LEFT" />
               </yAxis>
            </LineChart>
            <LineChart fx:id="chartHumidite" title="Humidité">
              <xAxis>
                <CategoryAxis side="BOTTOM" fx:id="xAxisHumidite" />
              </xAxis>
              <yAxis>
                <NumberAxis fx:id="yAxisHumidite" side="LEFT" />
              </yAxis>
            </LineChart>
            <LineChart fx:id="chartCO2" title="Dioxyde de carbone">
               <xAxis>
                  <CategoryAxis side="BOTTOM" fx:id="xAxisCO2" />
               </xAxis>
               <yAxis>
                  <NumberAxis fx:id="yAxisCO2" side="LEFT" />
               </yAxis>
            </LineChart>
         </children>
      </VBox>
   </center>
</BorderPane>
